{
    "name": "whitesunrise/guardian",
    "type": "library",
    "description": "Multi- for Laravel 5.3+",
    "keywords": [
        "WhiteSunrise",
        "Guardian",
        "multi-auth",
        "eloquent",
        "laravel",
        "roles",
        "permissions"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "David Miller",
            "email": "d.miller@whitesunrise.com"
        }
    ],
    "homepage": "https://github.com/whitesunrise/guardian",
    "require": {
        "illuminate/support": "~5.0",
        "illuminate/console": "~5.0",
        "illuminate/cache": "~5.0",
        "php": "~5.6|~7.0"
    },
    "require-dev": {
        "illuminate/database": "~5.0",
        "phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "WhiteSunrise\\Guardian\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhiteSunrise\\Guardian\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
